---

<section id="program" class="py-16 px-6 scroll-mt-20 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Preliminary Program
    </h2>
    
    <div class="overflow-x-auto">
      <table class="w-full border-collapse border border-gray-300 bg-white shadow-lg rounded-lg overflow-hidden">
        <thead>
          <tr class="bg-gray-700 text-white">
            <th class="border border-gray-300 px-4 py-3 text-left font-bold text-white">Time</th>
            <th class="border border-gray-300 px-4 py-3 text-left font-bold text-white">Session</th>
            <th class="border border-gray-300 px-4 py-3 text-left font-bold text-white">Speaker(s)</th>
          </tr>
        </thead>
        <tbody>
          {program.map((item, index) => (
            <tr class={index % 2 === 0 ? 'bg-white hover:bg-gray-100' : 'bg-gray-50 hover:bg-gray-100'}>
              <td class="border border-gray-300 px-4 py-3 text-sm font-medium text-gray-900">
                {item.time}
              </td>
              <td class="border border-gray-300 px-4 py-3 text-sm text-gray-700">
                {item.session.includes("Future of Supercomputing in Europe") 
                  ? item.session.replace("Future of Supercomputing in Europe", "Future of Supercomputing in Europe")
                  : item.session
                }
              </td>
              <td class="border border-gray-300 px-4 py-3 text-sm text-gray-700">
                {item.speakers}
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>
