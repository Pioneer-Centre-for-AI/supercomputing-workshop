  {
    time: "10:45 – 11:00",
    session: "LUMI (EuroHPC): System Presentation and Use Case",
    speakers: "Iacopo Colonnelli"
  },
  {
    time: "11:00 – 11:15",
    session: "Hendrix and LUMI: System Presentation and Use Case",
    speakers: "Hui Zhang"
  },
  {
    time: "11:15 – 11:30",
    session: "NGC: System Presentation and Use Case",
    speakers: "Jakob Ambsdorf"
