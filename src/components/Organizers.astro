---
interface Props {
  avatar?: boolean;
}

const { avatar = false } = Astro.props as Props;

const organizers = [
  {
    name: "Nicki Skafte Detlefsen",
    institution: "Technical University of Denmark",
    linkedin: "https://www.linkedin.com/in/nicki-skafte-detlefsen"
  },
  {
    name: "Ulrik Nicolai de Lichtenberg",
    institution: "Danish Centre for AI Innovation",
    linkedin: "https://www.linkedin.com/in/ulrik-nicolai-de-lichtenberg"
  },
  {
    name: "Benjamin Starostka Jakobsen",
    institution: "Technical University of Denmark and AI Pioneer Centre",
    linkedin: "https://www.linkedin.com/in/starostka"
  },
  {
    name: "Abdulrahman Azab Mohamed",
    institution: "Norwegian Research Infrastructure Services",
    linkedin: "https://www.linkedin.com/in/abdulrahman-azab"
  },
  {
    name: "Erik Lindahl",
    institution: "National Academic Infrastructure for Supercomputing in Sweden",
    linkedin: "https://www.linkedin.com/in/elindahl"
  }
];
---

<section id="organizers" class="py-16 px-6 scroll-mt-20 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
      Organizers
    </h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {organizers.map((organizer) => (
        <div class="text-center">
          {avatar && (
            <div class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          )}
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            {organizer.linkedin ? (
              <a href={organizer.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-900 hover:text-blue-600 transition-colors cursor-pointer">
                {organizer.name}
              </a>
            ) : (
              organizer.name
            )}
          </h3>
          <p class="text-sm text-gray-500 leading-relaxed">{organizer.institution}</p>
        </div>
      ))}
    </div>
  </div>
</section>
